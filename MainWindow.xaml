<Window x:Class="TheDonMVVMTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TheDonMVVMTutorial.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>

        <TextBox x:Name="nameTextBox" Margin="10"
                 Text="{Binding Person.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>

        <TextBox x:Name="addressTextBox" Margin="10"
                 Text="{Binding Person.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Content="Update Me!"
                Margin="10"
                Command="{Binding updateMeCommand}"/>

        <Button Content="Update My Properties!"
                Margin="10"
                Command="{Binding updateMyPropertiesCommand}"/>

    </StackPanel>

</Window>
